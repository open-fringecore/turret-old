{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "host": {
        "type": "string",
        "format": "hostname",
        "description": "The hostname or IP address"
      },
      "port": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535,
        "description": "The port number"
      }
    },
    "oneOf": [
        { "required": ["host"] },
        { "required": ["port"] }
    ],
    "additionalProperties": false
}
