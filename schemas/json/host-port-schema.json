{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "host": {
            "type": "string"
          },
          "port": {
            "type": "integer"
          },
          "timeout": {
            "type": "integer"
          },
          "serviceName": {
            "type": "string"
          },
          "servicePort": {
            "type": "integer"
          }
        },
        "anyOf": [
          {"required": ["host"]},
          {"required": ["port"]}
        ],
        "required": ["timeout", "serviceName", "servicePort"]
      }
    }
  },
  "required": ["services"]
}
